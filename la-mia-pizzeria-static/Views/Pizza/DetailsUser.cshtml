@{
    Layout = "_LayoutUser";
}

@section StyleUser{

    <link rel="stylesheet" href="~/css/mystyleuser.css" />
}


@model Pizza

<div class="container text-center detail-pizza py-4 rounded-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-center align-items-center">
                <h1 class="mt-3 mb-4 text-danger fw-bold">Dettaglio pizza</h1>
            </div>
            <div class="post-single-image-container">
                <img class="rounded-5 text-center" width="750" src="@Model.Image">
            </div>
            <p class="mt-4">
                <strong>Nome:</strong>
                @Model.Name
            </p>
            <p>
                <strong>Descrizione:</strong>
                @Model.Description
            </p>
            <p>
                <strong>Prezzo:</strong>
                € @Model.Price.ToString("0.00")
            </p>
            <a class="btn btn-danger" href="@Url.Action("UserIndex", "Pizza")" role="button">
                <b>Torna Indietro</b>
            </a>
        </div>
    </div>
</div>
