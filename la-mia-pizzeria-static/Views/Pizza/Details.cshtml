
@model Pizza

<div class="container py-3">
    <div class="row">
        <div class="col-12"> 
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-4">Dettaglio pizza</h1>
            </div>
            <div class="post-single-image-container">
                <img width="500" src="@Model.Image" class="rounded-4">
            </div>
            <p class="mt-4">
                <strong>Nome:</strong>
                @Model.Name
            </p>
            <p>
                <strong>Descrizione:</strong>
                @Model.Description
            </p>
            <p>
                <strong>Prezzo:</strong>
               € @Model.Price.ToString("0.00")
            </p>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Pizza")" role="button">
                <b>Torna Indietro</b>     
            </a>
        </div>
    </div>
</div>
