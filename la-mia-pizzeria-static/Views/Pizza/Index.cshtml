@{
    Layout = "_Layout";
}

@section Style{
    <link rel="stylesheet" href="~/css/mystyle.css" />
}


@model List<Pizza>

@if (Model.Count() == 0)
{
    <h3>Non ci sono pizze da mostrare</h3>
}
 else
{
     <div class="row">
        <div class="col-12">

            <h1 class="py-4 fw-bold">La mia pizzeria</h1>

            <table class="table bg-light">
                <thead>
                    <tr class="mt-5">
                        <th scope="col">ID</th>
                        <th scope="col">Immagine</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Descrizione</th>
                        <th scope="col">Prezzo</th>
                        <th scope="col" class="text-center">Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach(Pizza pizza in Model)
                    {
                        <tr>
                            <th scope="row">@pizza.Id</th>
                            <td><img width="200" src="@pizza.Image" alt="@pizza.Name" /></td>
                            <td>@pizza.Name</td>
                            <td>@pizza.Description</td>
                            <th scope="col"> € @pizza.Price.ToString("0.00") </th>
                            <td class="d-flex justify-content-center align-items-center">
                                <a class="btn btn-info btn-sm me-2" href="@Url.Action("Details", "Pizza", new { id = pizza.Id })">
                                    <b>Dettaglio pizza</b>
                                </a>
                                <a class="btn btn-info btn-sm" href="@Url.Action("Create", "Pizza", new { id = pizza.Id })">
                                    <b>Crea pizza</b>
                                </a> 
                             </td>                         
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

}
